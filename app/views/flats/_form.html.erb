<div class="container">
<h1>Add a Flat</h1>
<%= simple_form_for(@flat) do |f| %>
   <div class="form-inputs"> 
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :number_of_guests %>
    <%= f.input :price_per_night %>
   </div>
  <div class="form-actions"> 
    <%= f.button :submit, class: "btn btn-primary"%>
   </div>
<% end %>
</div>